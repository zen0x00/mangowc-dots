#!/usr/bin/env bash

THEME="$HOME/.config/rofi/power-menu.rasi"

lock=""
logout="󰗽"
reboot="󰜉"
poweroff=""

chosen=$(printf "%s\n%s\n%s\n%s\n" \
    "$lock" "$logout" "$reboot" "$poweroff" | rofi \
    -dmenu \
    -theme "$THEME"
)

case "$chosen" in
    "$lock")
        command -v hyprlock >/dev/null && hyprlock || swaylock
        ;;
    "$logout")
        hyprctl dispatch exit
        ;;
    "$reboot")
        systemctl reboot
        ;;
    "$poweroff")
        systemctl poweroff
        ;;
esac
